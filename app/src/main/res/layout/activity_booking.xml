<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/login_bk_color"
    android:focusableInTouchMode="true"
    android:gravity="center"
    tools:context=".BookingActivity">

    <View
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/ic_left_side_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/register_bk_color"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_left_white" />

            <TextView
                android:id="@+id/txtMonthYear"
                android:layout_width="271dp"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:text="May\n2021" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_right_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/register_bk_color"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtMon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:gravity="center_horizontal|center_vertical"
                android:text="Mon\n14"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtTue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:gravity="center_horizontal|center_vertical"
                android:text="Tur\n15"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtWed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:gravity="center_horizontal|center_vertical"
                android:text="Wed\n16"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtThu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:gravity="center_horizontal|center_vertical"
                android:text="Thu\n17"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtFri"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:gravity="center_horizontal|center_vertical"
                android:text="Fri\n18"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtSat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_date"
                android:fontFamily="monospace"
                android:gravity="center_horizontal|center_vertical"
                android:text="Sat\n19"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtSun"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:gravity="center_horizontal|center_vertical"
                android:text="Sun\n20"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/stylist_left_disable" />

            <LinearLayout
                android:id="@+id/stylistLeft"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="onLeftStylistClick"
                android:orientation="vertical"
                android:padding="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/stylist_1" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nameLeft"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="monospace"
                    android:gravity="center|left"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stylistCenter"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:onClick="onCenterStylistClick"
                android:orientation="vertical"
                android:padding="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/stylist_2" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nameCenter"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|left"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stylistRight"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="onRightStylistClick"
                android:orientation="vertical"
                android:padding="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/stylist_3" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nameRight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|left"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:src="@drawable/stylist_right_active" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/chk0809"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="monospace"
                    android:onClick="onTimeslotClick"
                    android:padding="0dp"
                    android:text="08:00 - 09:00"
                    android:textColor="#736D6D"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk0910"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="monospace"
                    android:onClick="onTimeslotClick"
                    android:padding="0dp"
                    android:text="09:00 - 10:00"
                    android:textColor="#736D6D"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk1011"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="monospace"
                    android:onClick="onTimeslotClick"
                    android:padding="0dp"
                    android:text="10:00 - 11:00"
                    android:textColor="#736D6D"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk1112"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="monospace"
                    android:onClick="onTimeslotClick"
                    android:padding="0dp"
                    android:text="11:00 - 12:00"
                    android:textColor="#736D6D"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk1213"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="monospace"
                    android:onClick="onTimeslotClick"
                    android:padding="0dp"
                    android:text="12:00 - 13:00"
                    android:textColor="#736D6D"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/chk1314"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="monospace"
                    android:onClick="onTimeslotClick"
                    android:padding="0dp"
                    android:text="13:00 - 14:00"
                    android:textColor="#736D6D"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk1415"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="monospace"
                    android:onClick="onTimeslotClick"
                    android:padding="0dp"
                    android:text="14:00 - 15:00"
                    android:textColor="#736D6D"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk1516"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="monospace"
                    android:onClick="onTimeslotClick"
                    android:padding="0dp"
                    android:text="15:00 - 16:00"
                    android:textColor="#736D6D"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk1617"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:enabled="false"
                    android:fontFamily="monospace"
                    android:onClick="onTimeslotClick"
                    android:padding="0dp"
                    android:text="16:00 - 17:00"
                    android:textColor="#736D6D"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk1718"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:enabled="false"
                    android:fontFamily="monospace"
                    android:onClick="onTimeslotClick"
                    android:padding="0dp"
                    android:text="17:00 - 18:00"
                    android:textColor="#736D6D"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnBook"
            style="@style/loginButton"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:fontFamily="monospace"
            android:onClick="onBookingClick"
            android:text="Book Appointment"
            android:textSize="20sp" />

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="false"
        android:onClick="onBackClick"
        android:src="@drawable/ic_go_to_home_img" />
</RelativeLayout>