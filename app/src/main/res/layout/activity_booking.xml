<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_gravity="center"
android:background="@color/white"
android:focusableInTouchMode="true"
android:gravity="center"
tools:context=".BookingActivity">

    <View
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/ic_left_side_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <com.shuhart.stepview.StepView
            android:id="@+id/stepView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:sv_animationType="None"
            app:sv_stepPadding="10dp"
            app:sv_selectedCircleColor="@color/white"
            app:sv_selectedStepNumberColor="@color/red_color"
            app:sv_selectedTextColor="@color/white"
            app:sv_doneCircleColor="@color/black"
            app:sv_doneStepLineColor="@color/white"
            app:sv_doneTextColor="@color/black"
            app:sv_doneStepMarkColor="@color/white"
            app:sv_nextStepCircleColor="@color/black"
            app:sv_nextStepLineColor="@color/white"
            app:sv_nextTextColor="@color/black"
            android:background="@color/red_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Detail"
            android:gravity="center"
            android:textSize="25sp"
            android:padding="20dp"
            android:textColor="@color/red_color"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:shadowRadius="30"
            android:shadowColor="@color/dark_red_color"
            android:background="@drawable/background_seperator"/>

        <ScrollView
            android:id="@+id/scrolling_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_stylist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_seperator"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <TextView
                        style="@style/parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="Choose Stylist"
                        android:textColor="@color/red_color"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginTop="25dp"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/stylist_left_disable" />

                        <LinearLayout
                            android:id="@+id/stylistLeft"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:onClick="onLeftStylistClick"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                app:cardCornerRadius="15dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/stylist_1" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/nameLeft"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="monospace"
                                android:gravity="center|left"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/stylistCenter"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:onClick="onCenterStylistClick"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                app:cardCornerRadius="15dp">

                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/stylist_2" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/nameCenter"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center|left"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/stylistRight"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:onClick="onRightStylistClick"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                app:cardCornerRadius="15dp">

                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/stylist_3" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/nameRight"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center|left"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/stylist_right_active" />

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/layout_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/background_seperator">

                    <TextView
                        style="@style/parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="Choose Services"
                        android:textColor="@color/red_color"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="450dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/layout_cut"
                                android:layout_width="110dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="onCutClick">

                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_haircut" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:fontFamily="monospace"
                                    android:gravity="center|top"
                                    android:paddingTop="5dp"
                                    android:text="Haircut"
                                    android:textColor="@color/red_color" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif-monospace"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:fontFamily="serif-monospace"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_wash"
                                android:layout_width="110dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="onWashClick">

                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_hairwash" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:fontFamily="monospace"
                                    android:gravity="center|top"
                                    android:paddingTop="5dp"
                                    android:text="Hair Wash"
                                    android:textColor="@color/red_color" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif-monospace"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:fontFamily="serif-monospace"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_straight"
                                android:layout_width="110dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="onStraightClick">

                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_straighten" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:fontFamily="monospace"
                                    android:gravity="center|top"
                                    android:paddingTop="5dp"
                                    android:text="Straightening"
                                    android:textColor="@color/red_color" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif-monospace"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:fontFamily="serif-monospace"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/layout_curve"
                                android:layout_width="110dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="onCurveClick">

                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_curl" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:fontFamily="monospace"
                                    android:gravity="center|top"
                                    android:paddingTop="5dp"
                                    android:text="Curling"
                                    android:textColor="@color/red_color" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif-monospace"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:fontFamily="serif-monospace"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_m_color"
                                android:layout_width="110dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="onMaleColorClick">

                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_color_m" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:fontFamily="monospace"
                                    android:gravity="center|top"
                                    android:paddingTop="5dp"
                                    android:text="Coloring\n(Male)"
                                    android:textColor="@color/red_color" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif-monospace"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:fontFamily="serif-monospace"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_f_color"
                                android:layout_width="110dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="onFemaleColorClick">

                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_color_f" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:fontFamily="monospace"
                                    android:gravity="center|top"
                                    android:paddingTop="5dp"
                                    android:text="Coloring\n(Female)"
                                    android:textColor="@color/red_color" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif-monospace"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:fontFamily="serif-monospace"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/layout_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="Choose Booking Time"
                        android:textColor="@color/red_color"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace" />


                    <Spinner
                        android:id="@+id/spinnerDate"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/border_stylist"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">


                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/chk0809"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="monospace"
                                android:onClick="onTimeslotClick"
                                android:padding="0dp"
                                android:text="08:00 - 09:00"
                                android:textColor="#736D6D"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/chk0910"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="monospace"
                                android:onClick="onTimeslotClick"
                                android:padding="0dp"
                                android:text="09:00 - 10:00"
                                android:textColor="#736D6D"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/chk1011"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="monospace"
                                android:onClick="onTimeslotClick"
                                android:padding="0dp"
                                android:text="10:00 - 11:00"
                                android:textColor="#736D6D"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/chk1112"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="monospace"
                                android:onClick="onTimeslotClick"
                                android:padding="0dp"
                                android:text="11:00 - 12:00"
                                android:textColor="#736D6D"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/chk1213"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="monospace"
                                android:onClick="onTimeslotClick"
                                android:padding="0dp"
                                android:text="12:00 - 13:00"
                                android:textColor="#736D6D"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/chk1314"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="monospace"
                                android:onClick="onTimeslotClick"
                                android:padding="0dp"
                                android:text="13:00 - 14:00"
                                android:textColor="#736D6D"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/chk1415"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="monospace"
                                android:onClick="onTimeslotClick"
                                android:padding="0dp"
                                android:text="14:00 - 15:00"
                                android:textColor="#736D6D"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/chk1516"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="monospace"
                                android:onClick="onTimeslotClick"
                                android:padding="0dp"
                                android:text="15:00 - 16:00"
                                android:textColor="#736D6D"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/chk1617"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="15dp"
                                android:enabled="false"
                                android:fontFamily="monospace"
                                android:onClick="onTimeslotClick"
                                android:padding="0dp"
                                android:text="16:00 - 17:00"
                                android:textColor="#736D6D"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/chk1718"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="15dp"
                                android:enabled="false"
                                android:fontFamily="monospace"
                                android:onClick="onTimeslotClick"
                                android:padding="0dp"
                                android:text="17:00 - 18:00"
                                android:textColor="#736D6D"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnConfirm"
                    style="@style/loginButton"
                    android:layout_width="273dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:fontFamily="monospace"
                    android:onClick="onBookingClick"
                    android:text="Confirm Appointment"
                    android:textSize="20sp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>




    <ImageView
        android:layout_width="51dp"
        android:layout_height="126dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="0dp"
        android:adjustViewBounds="false"
        android:onClick="onBackClick"
        android:src="@drawable/ic_back_img_cyan" />
</RelativeLayout>