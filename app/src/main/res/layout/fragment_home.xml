    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="left|center">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search Salon..."
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:background="@null"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="10dp"
                android:background="@drawable/border_white"
                android:onClick="onFilterClick"
                android:layout_gravity="right|center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_settings"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

            <TextView
                android:id="@+id/lblHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salon List"
                android:textColor="@color/colorButton"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@id/lblHome"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="190dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/dark_red_color"
                        android:padding="2dp">

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/image_salon_one"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            android:onClick="onCardBookClick" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent">

                            <SlidingDrawer
                                android:id="@+id/slideDrawer1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:handle="@id/slidingHandle1"
                                android:content="@id/slidingContent1"
                                android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/slidingHandle1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:background="@color/red_color">

                                <TextView
                                    android:id="@+id/txtSalon1"
                                    style="@style/text_shadow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_gravity="left|center"
                                    android:padding="3dp"
                                    android:text="Random Salon"
                                    android:textColor="@color/white"
                                    android:textSize="22sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/red_color"
                                    android:orientation="horizontal"
                                    android:layout_gravity="right|center"
                                    android:gravity="right"
                                    android:paddingTop="5dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="5dp">

                                    <RatingBar
                                        android:id="@+id/ratingBar1"
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="7dp"
                                        android:layout_gravity="center"
                                        android:max="5"
                                        android:numStars="5"
                                        android:progressTint="@color/colorRating"
                                        android:rating="4.5"
                                        android:stepSize="0.5" />

                                    <TextView
                                        android:id="@+id/reviewer1"
                                        style="@style/text_shadow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="(510)"
                                        android:textColor="@color/white"
                                        android:textSize="15sp" />

                                </LinearLayout>

                            </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/slidingContent1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/red_color">
                                    <TextView
                                        android:id="@+id/address1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:text="153 Ly Thuong Kiet, P 7,Q 11, TP. Hồ Chí Minh"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        style="@style/text_shadow" />
                                </RelativeLayout>

                            </SlidingDrawer>

                        </FrameLayout>



                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/dark_red_color"
                        android:padding="2dp">

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/image_salon_two"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent">

                            <SlidingDrawer
                                android:id="@+id/slideDrawer2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:handle="@id/slidingHandle2"
                                android:content="@id/slidingContent2"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/slidingHandle2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="left|center"
                                    android:orientation="horizontal"
                                    android:background="@color/red_color">


                                    <TextView
                                        android:id="@+id/txtSalon2"
                                        style="@style/text_shadow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_gravity="left|center"
                                        android:padding="3dp"
                                        android:text="Salon 2"
                                        android:textColor="@color/white"
                                        android:textSize="22sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/red_color"
                                        android:orientation="horizontal"
                                        android:layout_gravity="right|center"
                                        android:gravity="right"
                                        android:paddingTop="5dp"
                                        android:paddingRight="10dp"
                                        android:paddingBottom="5dp">

                                        <RatingBar
                                            android:id="@+id/ratingBar2"
                                            style="?android:attr/ratingBarStyleSmall"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="7dp"
                                            android:layout_gravity="center"
                                            android:max="5"
                                            android:numStars="5"
                                            android:progressTint="@color/colorRating"
                                            android:rating="3"
                                            android:stepSize="0.5" />

                                        <TextView
                                            android:id="@+id/reviewer2"
                                            style="@style/text_shadow"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:text="(682)"
                                            android:textColor="@color/white"
                                            android:textSize="15sp" />

                                    </LinearLayout>


                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/slidingContent2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/red_color">
                                    <TextView
                                        android:id="@+id/address2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:text="758 Âu Cơ, Phường 14, Q.Tân Bình, TP Hồ Chí Minh"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        style="@style/text_shadow" />
                                </RelativeLayout>

                            </SlidingDrawer>

                        </FrameLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/dark_red_color"
                        android:padding="2dp">

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/image_salon_three"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent">

                            <SlidingDrawer
                                android:id="@+id/slideDrawer3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:handle="@id/slidingHandle3"
                                android:content="@id/slidingContent3"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/slidingHandle3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="left|center"
                                    android:orientation="horizontal"
                                    android:background="@color/red_color">



                                    <TextView
                                        android:id="@+id/txtSalon3"
                                        style="@style/text_shadow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_gravity="left|center"
                                        android:padding="3dp"
                                        android:text="Salon 3"
                                        android:textColor="@color/white"
                                        android:textSize="22sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/red_color"
                                        android:orientation="horizontal"
                                        android:layout_gravity="right|center"
                                        android:gravity="right"
                                        android:paddingTop="5dp"
                                        android:paddingRight="10dp"
                                        android:paddingBottom="5dp">

                                        <RatingBar
                                            android:id="@+id/ratingBar3"
                                            style="?android:attr/ratingBarStyleSmall"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="7dp"
                                            android:layout_gravity="center"
                                            android:max="5"
                                            android:numStars="5"
                                            android:progressTint="@color/colorRating"
                                            android:rating="4"
                                            android:stepSize="0.5" />

                                        <TextView
                                            android:id="@+id/reviewer3"
                                            style="@style/text_shadow"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:text="(291)"
                                            android:textColor="@color/white"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/slidingContent3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/red_color">
                                    <TextView
                                        android:id="@+id/address3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:text="150 Trường Chinh, Phường 12, Q.Tân Bình, TP Hồ Chí Minh"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        style="@style/text_shadow" />
                                </RelativeLayout>

                            </SlidingDrawer>

                        </FrameLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>