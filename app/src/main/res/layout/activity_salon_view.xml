<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SalonViewActivity">

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:onClick="onBackToHomeClick"
            android:src="@drawable/arrow_back" />

        <LinearLayout
            android:layout_width="265dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="7dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/txtSalonName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="monospace"
                android:gravity="center|left"
                android:text="Random Salon"
                android:textColor="@color/red_color"
                android:textSize="24sp" />

            <RatingBar
                android:id="@+id/ratingSalon"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:numStars="1"
                android:rating="3.5"
                android:isIndicator="false"
                style="@style/ratingStyle"/>
        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_gravity="center|right"
            android:src="@drawable/map_link" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_stylist"
            android:orientation="vertical">


            <TextView
                style="@style/parent"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:text="About Us"
                android:textColor="@color/red_color"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <LinearLayout
                style="@style/parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/background_seperator"
                android:orientation="horizontal"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="monospace"
                        android:gravity="right|top"
                        android:paddingTop="5dp"
                        android:text="Address:"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="monospace"
                        android:gravity="center|right"
                        android:text="Open hours:"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="monospace"
                        android:gravity="center|right"
                        android:text="Open days:"
                        android:textColor="#000000"
                        android:textSize="13sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:gravity="right|top"
                        android:paddingTop="5dp"
                        android:text="About Us:"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="monospace"
                        android:gravity="left|top"
                        android:maxLines="2"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="153 Ly Thuong Kiet, P 7,\nQ 11, TP. Hồ Chí Minh, Vietnam"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="monospace"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="8AM - 6PM"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="monospace"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="Monday to Sunday"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:gravity="left|top"
                        android:maxLength="300"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="This is the description for the salon. This is the description for the salon. This is the description for the salon. This is the description for the salon. This is the description for the salon. This is the description for the salon. This is the description for the salon. This is the description for the salon. This is the description for the salon. This is the description for the salon. "
                        android:textColor="#000000"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:text="Our Services"
                android:textColor="@color/red_color"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_margin="10dp"
                android:background="@drawable/background_seperator"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_haircut" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:fontFamily="monospace"
                            android:gravity="center|top"
                            android:paddingTop="5dp"
                            android:text="Haircut"
                            android:textColor="@color/red_color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif-monospace"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="serif-monospace"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_hairwash" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:fontFamily="monospace"
                            android:gravity="center|top"
                            android:paddingTop="5dp"
                            android:text="Hair Wash"
                            android:textColor="@color/red_color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif-monospace"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="serif-monospace"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_straighten" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:fontFamily="monospace"
                            android:gravity="center|top"
                            android:paddingTop="5dp"
                            android:text="Straightening"
                            android:textColor="@color/red_color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif-monospace"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="serif-monospace"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_curl" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:fontFamily="monospace"
                            android:gravity="center|top"
                            android:paddingTop="5dp"
                            android:text="Curling"
                            android:textColor="@color/red_color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif-monospace"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="serif-monospace"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_color_m" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:fontFamily="monospace"
                            android:gravity="center|top"
                            android:paddingTop="5dp"
                            android:text="Coloring\n(Male)"
                            android:textColor="@color/red_color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif-monospace"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="serif-monospace"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_color_f" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:fontFamily="monospace"
                            android:gravity="center|top"
                            android:paddingTop="5dp"
                            android:text="Coloring\n(Female)"
                            android:textColor="@color/red_color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif-monospace"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="serif-monospace"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/parent"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:text="Our Stylists"
                android:textColor="@color/red_color"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="129dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/stylist_left_disable" />

                <LinearLayout
                    android:id="@+id/stylistLeft"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:paddingTop="15dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/stylist_1" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/nameLeft"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="monospace"
                        android:gravity="center|left"
                        android:textSize="14sp" />

                    <RatingBar
                        android:id="@+id/ratingRight"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center|left"
                        android:progressTint="#FFCC01"
                        android:numStars="5"
                        android:rating="4" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stylistCenter"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:paddingTop="15dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/stylist_2" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/nameCenter"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center|left"
                        android:textSize="16sp" />

                    <RatingBar
                        android:id="@+id/ratingCenter"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center|left"
                        android:progressTint="#FFCC01"
                        android:numStars="5"
                        android:rating="4.5" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stylistRight"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:paddingTop="15dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/stylist_3" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/nameRight"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center|left"
                        android:textSize="16sp" />

                    <RatingBar
                        android:id="@+id/ratingLeft"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center|left"
                        android:progressTint="#FFCC01"
                        android:numStars="5"
                        android:rating="3" />
                </LinearLayout>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/stylist_right_active" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="170dp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_navigate"
        android:layout_width="414dp"
        android:layout_height="83dp"
        android:background="@drawable/background_nav"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btnDiscount"
            style="@style/loginButton"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@drawable/background_btn_discount"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Offers"
            android:textSize="16sp"
            android:onClick="onBtnDiscountClick" />

        <Button
            android:id="@+id/btnBooking"
            style="@style/loginButton"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_btn_book"
            android:fontFamily="monospace"
            android:gravity="center"
            android:paddingRight="8dp"
            android:text="Book Appointment"
            android:textSize="16sp"
            android:onClick="onBookClick" />

        <Button
            android:id="@+id/btnReviewPage"
            style="@style/loginButton"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@drawable/background_btn_review"
            android:fontFamily="monospace"
            android:gravity="center"
            android:paddingRight="13dp"
            android:text="Reviews"
            android:textSize="16sp"
            android:onClick="onBtnReviewClick" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>